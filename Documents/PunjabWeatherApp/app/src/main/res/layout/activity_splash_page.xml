<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#56c367"
    tools:context=".SplashPageActivity">


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="ਪੰਜਾਬ ਮੌਸਮ"
    android:id="@+id/textView"
    android:gravity="center_horizontal"
    android:textSize="45dp"
    android:textColor="#ccffde"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Punjab Weather App"
    android:id="@+id/textView2"
    android:gravity="center_horizontal"
    android:textColor="#ccffde"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageView"
    android:layout_above="@+id/textView"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="45dp"
    android:src="@drawable/mainicon"
    android:tint="#ccffde" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/splashButton"
    android:layout_below="@+id/textView2"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp"
    android:background="#ccffde"
    android:textColor="#56c367"
    android:textSize="18dp"
    android:text="start" />

</RelativeLayout>
